{
  "root": true,
  "env": {
    "node": true,
    "vue/setup-compiler-macros": true,
    "jest/globals": true
  },
  "extends": [
    "standard",
    "plugin:vue/vue3-recommended"
  ],
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "parser": "@babel/eslint-parser",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2]
  },
  "plugins": ["jest"]
}